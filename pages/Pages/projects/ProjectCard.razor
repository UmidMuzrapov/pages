<div id="project-frame">

    <div class="frame">
        <div>
            <div class="frameline">
                <p class="custom-header"> @Project.Name</p>
            </div>

            <img src="@Project.Image" alt="@Project.Name" />
        </div>

        <div class="button-center">

            <a href="@Project.GitLink"><button type="button" class="btn btn-primary button-padding">GitHub</button></a>
            

            @if (Project.LiveTest)
            {
                <a href="@Project.LiveTestLink"><button type="button" class="btn button-success button-padding">Live</button> </a>
            }

        </div>
        

        <div class="description">
            <p><strong>Description: </strong>@Project.Description</p>
        </div>

        @if (!(@Project.Tools.Equals("None")))
        {
            <div class="description">
                <p><strong>Tools: </strong>@Project.Tools</p>
            </div>
        }
    </div>
   
</div>

@code {
    [Parameter]
    [EditorRequired]
    public Project Project { get; set; } = default;
}

